{
  "version": 2,
  "builds": [
    { "src": "server/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/chat", "dest": "server/server.js" },
    { "src": "/api/pretrip", "dest": "server/server.js" },
    { "src": "/api/translate", "dest": "server/server.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}